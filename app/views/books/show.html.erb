<%= form_with model: @book, url:'/books', local:true do |f| %>
<p><strong>Title: </strong><%= @book.title %></p>
<p><strong>Body: </strong><%= @book.body %></p>
<p><strong>Genre: </strong><%= @book.genre %></p>
<p><strong>Production: </strong><%= @book.prodction %></p>

<div>
    <%= f.label :status %>
    <%= f.select :status, Book.statuses.keys.to_a, {} %>
</div>
<%= f.submit %>
<%= button_to "更新", book_path(@book.id), method: :patch, class: "register-blue-btn" %>
<% end %>

<%= link_to 'Edit', edit_book_path(@book), class: "edit_#{@book.id}" %> |
<%= link_to 'Back', books_path, class: "back" %>
